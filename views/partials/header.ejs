<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSS TAX APP</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" >
    <link href="/css/custom.css" rel="stylesheet" >
</head>
<body>
    <div class="header">
        <img src="JSSMVP_logo.jpeg" alt="Left Logo" style="width: 100px; height: 100px;">
        <div class="header-title">JSS TAX APP</div>
        <% if (isLoggedIn) { %>
            <% if (isAdmin) { %>
                <h5><span class="badge text-bg-secondary">Logged in as ADMIN</span></h5>
            <% } else if (isDivisionUser){ %>
                <h5><span class="badge text-bg-secondary">Logged in as Division <%= user_details.division %></span></h5>
            <% } else if (isInstitutionUser) {%>
                <h5><span class="badge text-bg-secondary">Logged in as Institution <%= user_details.institution %></span></h5>
            <% } else if (isSiteUser) {%>
                <h5><span class="badge text-bg-secondary">Logged in as Site <%= user_details.site %></span></h5>
            <% } %>
            <a class="btn btn-danger" href="/logout">Logout</a>
        <% } else { %>
            <a class="btn btn-primary" href="/login">Login</a>
        <% } %>
    </div>
    <% if (isLoggedIn) { %>
        <a class="btn btn-outline-primary btn-sm mt-1 mx-2" href="/go_back"> &lt; Go Back</a>
    <% } %>
    <% if (flash_messages) { %>
        <% for (const message_type in flash_messages) { %>
            <% flash_messages[message_type].forEach(function(msg) { %>
                <div class="w-50 mx-auto text-center">
                    <div class="alert alert-<%= message_type%> alert-dismissible fade show" role="alert">
                        <%= msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            <% }); %>
        <% }; %>
    <% } %>
    